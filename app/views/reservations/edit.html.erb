<a name = "edit"></a>
<div class = "jumbotron" align = "center">
<h1>Edit Reservation</h1>
<%= simple_form_for @reservation do |f| %>
<% if @reservation.errors.any? %>
<font color = "red">You can not extend the time of your reservation.  Would you like to create a <%= link_to 'new reservation', new_reservation_path(:resource => @reservation.resources.first.id, anchor: "new") %> instead?</font>
<% end %>
      <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_field :description %>
    </p>

  <p>
    	<%= f.label :starttime %><br>
    	<%= f.datetime_select :starttime %>
  	</p>
 
	<p>
    	<%= f.label :endtime %><br>
   		<%= f.datetime_select :endtime %>
 	</p>

  <p>
      <%= f.association :resources, as: :check_boxes, label_method: :name, collection: @reservation.resources.order('name ASC') %>
  </p>
 
	<p>
    	<%= f.submit %>
  	</p>
<% end %>
</div>