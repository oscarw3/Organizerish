<!-- Form for Admins to create resources -->
<%= simple_form_for @resource do |f| %>
	<p>
    	<%= f.label :name %><br>
    	<%= f.text_field :name %>
  	</p>
 
	<p>
    	<%= f.label :description %><br>
   		<%= f.text_area :description %>
 	</p>

  <p> 
      <%= f.label :tags %><br>
      <%= f.text_area :temp_tags %>
  </p>


 <p>
      <%= f.label :isrestricted, 'Restrict Resource:' %>
      <%= f.check_box :isrestricted %>
  </p>

  <p>
    <%= f.collection_radio_buttons :sharing_level, [[0, 'Exclusive'] ,[1, 'Limited'], [2, 'Unlimited']], :first, :last %>
  </p>

  <p>
      <%= f.association :groups, as: :check_boxes, :label_method => :name, collection: Group.order('name ASC')%>
  </p>


	<p>
    	<%= f.submit %>
  </p>
<% end %>